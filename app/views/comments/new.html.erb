<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @comment do |f| %> 
          <div class="form-group">
            <%= f.label :"コメント" %>
            <%= f.text_area :sentence, class: 'form-control' %>
          </div>
          <%= f.hidden_field :topic_id, :value => @topic_id %>
          <!--メンターさんには11行目のように習いましたが、下記でも一緒ですか？
          <%= f.hidden_field :topic_id, value: @topic_id %>-->

          <% if logged_in? %> 
         　<%= f.submit '投稿', class: 'btn btn-black btn-block' %>
        　<% end %>

        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="topic-index-wrapper">
  <div class="container">
    <% topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
             <% if !topic.user.profile.nil? %>    
              <%= link_to profile_path(topic.user.profile.id) do %>      
               <%= topic.user.name %>
              <% end %> 
             <% else %> 
              <%= topic.user.name %>
             <% end %> 
            </h2>
            <%= image_tag topic.image.url %>
             <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
               <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
              <nobr><%= topic.favorite_users.size %></nobr>
             <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
               <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon-liked' %>
              <% end %>
              <nobr><%= topic.favorite_users.size %></nobr>
             <% end %>
            
            <%= link_to new_comment_path(topic_id: topic.id) do %> 
            　<%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
            <% if topic.user_id == current_user.id %>
              <%= link_to edit_topic_path(topic.id) do %>
               <%= image_tag 'icons/edit.png', class: 'topic-index-icon' %>
              <% end %>
              <%= link_to topic_path(topic.id), method: :delete, data: {confirm: "本当に削除しますか？"} do %> 
               <%= image_tag 'icons/delete.png', class: 'topic-index-icon' %>
              <% end %>
            <% end %>  
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <h3 class="topic-text">コメント</h3>
            <p class="topic-text">
              <% topic.comments.each do |comment| %>
               <br><%= comment.user.name %>: <%= comment.sentence %></br>
              <% end %>
            </p> 
            
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>